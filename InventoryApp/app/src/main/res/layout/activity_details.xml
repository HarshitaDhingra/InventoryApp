<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        style="@style/CategoryStyle"/>
    <EditText
        android:id="@+id/ProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:inputType="textCapWords"
        style="@style/EditorFieldStyle"
        android:maxLength="20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Price"
        style="@style/CategoryStyle"/>
    <EditText
        android:id="@+id/ProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="number"
        style="@style/EditorFieldStyle"
        android:maxLength="4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Quantity"
        style="@style/CategoryStyle"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/sub"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:onClick="Decrement"/>
            <TextView
            android:id="@+id/ProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            style="@style/EditorFieldStyle"/>
        <Button
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:onClick="Increment"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier Name"
        style="@style/CategoryStyle"/>
    <EditText
        android:id="@+id/SupplierName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textCapWords"
        style="@style/EditorFieldStyle"
        android:maxLength="30"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier Phone"
        style="@style/CategoryStyle"/>
    <EditText
        android:id="@+id/SupplierPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="7570414044"
        android:inputType="number"
        style="@style/EditorFieldStyle"
        android:maxLength="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier Email Address"
        style="@style/CategoryStyle"/>
    <EditText
        android:id="@+id/SupplierEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="abcd@example.com"
        android:inputType="textEmailAddress"
        style="@style/EditorFieldStyle"
        android:maxLength="30"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Image"
        style="@style/CategoryStyle"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddImage"
        android:id="@+id/fromGallery"
        />
    <ImageView
        android:id="@+id/photo"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
</LinearLayout>
</ScrollView>
